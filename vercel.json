{
  "version": 2,
  "buildCommand": "npm install && npm run build",
  "builds": [
    { "src": "server/index.ts", "use": "@vercel/node" },
    {
      "src": "vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/client" }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/server/index.ts" },

    // خدّم ملفات الواجهة (JS/CSS/صور) من مجلد البناء
    { "src": "^/(.*\\.(?:js|css|png|jpg|jpeg|svg|ico|webp|map))$", "dest": "/client/dist/$1" },

    // الروت "/" يروح صراحةً للـ index.html
    { "src": "^/$", "dest": "/client/dist/index.html" },

    // أي مسار غير موجود (SPA fallback) يرجع index.html
    { "src": "^(?!/api/).*$", "dest": "/client/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production",
    "USE_SIMULATED": "true"
  }
}
